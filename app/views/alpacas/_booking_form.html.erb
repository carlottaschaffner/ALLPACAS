<h4>Place your Booking</h4>

<%= simple_form_for [@alpaca, @booking] do |f| %>
  <div class="form-inputs">
    <%= f.input :start_date %>
    <%= f.input :end_date %>
  </div>

  <div class="form-actions">
    <% if user_signed_in? %>
      <!--  f.button :submit, "Book", class: "btn btn-green" %> -->
      <button id="myBtn", class="btn btn-green">Book</button>

      <div id="myModal" class="modal">
        <div class="modal-content">
        <span class="close">&times;</span>
        <p>Your ALLPACAS booking is confirmed</p>
        </div>
      </div>

      <!-- <button onclick="bookingConfirmation()", class="btn btn-green">Book</button> -->

      <!--  <script>
        function bookingConfirmation() {
        confirm("Your ALLPACAS booking is confirmed");
        }
      </script> -->

    <% else %>
    <div class="login-prompt">
      <em>Please login</em>
    </div>
    <% end %>
  </div>
<% end %>


